  "author": {
    "name": "PL,GC,RC",
    "url": "https://github.com/protocol/hypercerts-protocol"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@faker-js/faker": "^7.5.0",
